@model IEnumerable<EmployeeBonus.Models.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center; font-weight:bold;">Employee Bonus</h1>

@Html.ActionLink("New", "New", new { @class = "btn btn-primary", style="matgin:8px;"})

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Employee Id</th>
            <th>Employee Name</th>
            <th>Department</th>
            <th>Experience level</th>
            <th>Joining Date</th>
            <th>Salary</th>
            <th>Bonus</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Department.Name</td>
                <td>@employee.ExperienceLevel</td>
                <td>@employee.JoiningDate.ToString("yyyy/M/d")</td>
                <td>@employee.Salary</td>
                <td>@employee.Bonus</td>
                <td>@Html.ActionLink("Edit", "Edit", new { employee.Id }, new { @class = "btn btn-success" })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { employee.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are You Sure?')" })</td>

            </tr>
        }
    </tbody>
</table>